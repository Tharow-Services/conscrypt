//
// Definitions for building the Conscrypt Java library, native code,
// and associated tests.
//

//
// Common definitions for host and target.
//

// Conscrypt is divided into modules.
//
// The structure is:
//
//   src/
//       main/               # To be shipped on every device.
//            java/          # Java source for library code.
//            native/        # C++ source for library code.
//            resources/     # Support files.
//       test/               # Built only on demand, for testing.
//            java/          # Java source for tests.
//            native/        # C++ source for tests (rare).
//            resources/     # Support files.
//
// All subdirectories are optional (hence the "2> /dev/null"s below).

local_javac_flags += [
    "-Xmaxwarns 9999999",
]
//local_javac_flags+=-Xlint:all -Xlint:-serial,-deprecation,-unchecked

core_cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-Wunused",
]

core_cppflags = [
    "-std=gnu++11",
    "-Wall",
    "-Wextra",
    "-Werror",
    "-Wunused",
]

//
// Build for the target (device).
//

cc_binary_host {
    name: "conscrypt_generate_constants",
    srcs: ["src/gen/native/generate_constants.cc"],
    shared_libs: [
        "libcrypto",
        "libssl",
    ],
}

genrule {
    name: "conscrypt_native_constants",
    cmd: "conscrypt_generate_constants > $out",
    out: "conscrypt/NativeConstants.java",
    tool: "conscrypt_generate_constants",
}

// Create the conscrypt library
java_library {
    srcs: [
        "src/main/java/**/*.java",
        "src/platform/java/**/*.java",
    ],
    deps: ["conscrypt_native_constants"],
    java_libs: ["core-libart"],
    no_standard_libraries: true,
    javacflags: local_javac_flags,
    jarjar_rules: "jarjar-rules.txt",
    tags: ["optional"],
    name: "conscrypt",
    //required: ["libjavacrypto"],
}

// Create the conscrypt library without jarjar for tests
java_library_static {
    srcs: [
        "src/main/java/**/*.java",
        "src/platform/java/**/*.java",
    ],
    deps: ["conscrypt_native_constants"],
    java_libs: ["core-libart"],
    no_standard_libraries: true,
    javacflags: local_javac_flags,
    tags: ["optional"],
    name: "conscrypt-nojarjar",

}

// ANDROIDMK TRANSLATION ERROR: unsupported conditional
// ifeq ($(LIBCORE_SKIP_TESTS),)
// Make the conscrypt-tests library.
java_library_static {
    srcs: ["src/test/java/**/*.java"],
    no_standard_libraries: true,
    java_libs: [
        "core-libart",
        "core-junit",
        "bouncycastle",
    ],
    java_static_libs: [
        "core-tests-support",
        "conscrypt-nojarjar",
    ],
    javacflags: local_javac_flags,
    tags: ["optional"],
    name: "conscrypt-tests",
    //required: ["libjavacrypto"],
    jarjar_rules: "jarjar-rules.txt",
}

// ANDROIDMK TRANSLATION ERROR: endif from unsupported contitional
// endif
// Platform conscrypt crypto JNI library
cc_library_shared {
    host_supported: true,
    // ANDROIDMK TRANSLATION ERROR: unsupported conditional
    // ifneq (,$(wildcard $(TOP)/external/boringssl/flavor.mk))
    // ANDROIDMK TRANSLATION ERROR: unsupported include
    // include $(TOP)/external/boringssl/flavor.mk
    // ANDROIDMK TRANSLATION ERROR: else from unsupported contitional
    // else
    // ANDROIDMK TRANSLATION ERROR: unsupported include
    // include $(TOP)/external/openssl/flavor.mk
    // ANDROIDMK TRANSLATION ERROR: endif from unsupported contitional
    // endif
    cflags: ["-DJNI_JARJAR_PREFIX=\"com/android/\""],
    srcs: ["src/main/native/org_conscrypt_NativeCrypto.cpp"],
    include_dirs: [
        "external/openssl/include",
        "external/openssl",
        "libcore/include",
        "libcore/luni/src/main/native",
    ],
    shared_libs: [
        "libcrypto",
        "libjavacore",
        "liblog",
        "libnativehelper",
        "libssl",
    ],
    tags: ["optional"],
    name: "libjavacrypto",

    target: {
        host: {
            clang: true,
            host_ldlibs: ["-lpthread"],
            // NO_KEYSTORE_ENGINE instructs the BoringSSL build of Conscrypt not to support
            // the keystore ENGINE. It is not available in this build configuration.
            cflags: ["-DNO_KEYSTORE_ENGINE"],
        },
        android: {
            cflags: core_cflags,
            cppflags: core_cppflags,
            shared_libs: [
                "libz",
                // ANDROIDMK TRANSLATION ERROR: unsupported conditional
                // ifeq ($(OPENSSL_FLAVOR),BoringSSL)
                "libkeystore-engine"
                // ANDROIDMK TRANSLATION ERROR: endif from unsupported contitional
                // endif
            ],
        },
        darwin: {
            disabled: true,
        },
    },
}

// Unbundled Conscrypt jar
java_library_static {
    srcs: [
        "src/main/java/**/*.java",
        "src/compat/java/**/*.java",
    ],
    deps: ["conscrypt_native_constants"],
    sdk_version: "9",
    javacflags: local_javac_flags,
    tags: ["optional"],
    name: "conscrypt_unbundled",
    java_libs: ["conscrypt-stubs"],
}

// Stub library for unbundled builds
java_library_static {
    srcs: ["src/stub/java/**/*.java"],
    sdk_version: "9",
    javacflags: local_javac_flags,
    name: "conscrypt-stubs",
    jack_flags: ["-D jack.classpath.default-libraries=false"],
}

// Unbundled Conscrypt crypto JNI library
cc_library {
    host_supported: true,
    cflags: core_cflags + ["-DNO_KEYSTORE_ENGINE"], // NO_KEYSTORE_ENGINE instructs the BoringSSL build of Conscrypt not to support
    // the keystore ENGINE. It is not available in this build configuration.
    cppflags: core_cppflags,
    srcs: [
        "src/main/native/org_conscrypt_NativeCrypto.cpp",
    ],
    include_dirs: [
        "external/openssl/include",
        "external/openssl",
    ],

    ldflags: [
        "-llog",
        "-lz",
        "-ldl",
    ],
    tags: ["optional"],
    name: "libconscrypt_jni",

    target: {
        host: {
            clang: true,
            include_dirs: [
                "libcore/include",
                "libcore/luni/src/main/native",
            ],
            // NO_KEYSTORE_ENGINE instructs the BoringSSL build of Conscrypt not to
            // support the keystore ENGINE. It is not available in this build
            // configuration.
            cflags: ["-DNO_KEYSTORE_ENGINE"],
            cppflags: ["-DCONSCRYPT_NOT_UNBUNDLED"],
            host_ldlibs: ["-lpthread"],
            shared_libs: [
                "libcrypto",
                "libjavacore",
                "liblog",
                "libnativehelper",
                "libssl",
            ],
        },
        android: {
            srcs: ["src/compat/native/JNIHelp.cpp"],
            local_include_dirs: ["src/compat/native"],
            static_libs: [
                "libssl",
                "libcrypto",
            ],
            static: {
                cflags: [
                    "-DJNI_JARJAR_PREFIX=\"com/google/android/gms/\"",
                    "-DCONSCRYPT_UNBUNDLED",
                    "-DSTATIC_LIB",
                ],
            },
        },
        darwin: {
            disabled: true,
        },
    },

    sdk_version: "9",
}
